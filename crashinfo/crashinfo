# Script to start "crashinfo" on the device
#
base=/system/vendor
export CLASSPATH=$base/framework/crashinfo.jar
trap "" HUP

ID=$(id)

if [[ $ID != *root* ]] && [[ $ID != *system* ]] ; then
    echo "Elevated rights are required to run crashinfo."
    echo "Please substitute user to root or system"
    exit 1
fi

exec app_process $base/bin com.intel.commands.crashinfo.CrashInfo $*

