<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trace_in_coredump_txt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/trace_level_coredump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/disable_all_traces_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/disable_all_traces_coredump_button" />

        <RadioButton
            android:id="@+id/trace_ma_artemis_digrf_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trace_ma_artemis_digrf_coredump_button" />

        <RadioButton
            android:id="@+id/trace_ma_artemis_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trace_ma_artemis_coredump_button" />
    </RadioGroup>

    <Button
        android:id="@+id/apply_trace_coredump_button"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="@string/apply_trace_coredump_button" />

    <EditText
        android:id="@+id/text_coredump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:enabled="false"
        android:background="#ffff0f" >

        <requestFocus />
    </EditText>

</LinearLayout>
